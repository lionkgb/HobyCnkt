<div class="container">
  <div class="row">
    <div class="col-md-12">
        <div class="wrap">
            <p class="form-title">
                Sign In</p>
            <%= form_tag "/login", class: "login" do %>
            <input type="text" name= "email" placeholder="Email" />
            <input type="password" name= "password" placeholder="Password" />
            <input type="submit" value="Sign In" class="btn btn-success btn-sm" />
            <%end%>
        </div>
    </div>
  </div>
</div>