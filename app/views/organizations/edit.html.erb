<div class="container">
 <div class="rows">
   <div class="col-md-6">
      <h4> Edit Organization Information </h4>

      <%= form_tag "/organizations/#{@organization.id}", method: :patch do %>

      <script src="//cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
        <form>
            <div class="form-group">
              <label class="control-label" for="focusedInput">Name</label>
              <input class="form-control" id="focusedInput" type="text" name="name" value="<%= @organization.name %>">
            </div>

            <div class="form-group">
              <label class="control-label" for="focusedInput">Phone Number</label>
              <input class="form-control" id="focusedInput" type="text" name="address" value="<%= @organization.phone_number %>">
            </div>

            <div class="form-group">
              <label for="focusedInput">Email</label>
              <input type="email" class="form-control" id="focusedInput" name="email" aria-describedby="emailHelp" value="<%= @organization.email %>">
            </div>

            <div class="form-group">
            <label>Official Website</label>
            <textarea name="website" rows="2" value="<%= @organization.website %>"></textarea>
              <script>
                  CKEDITOR.replace( 'website' );
              </script>
          </div>

            

            <div class="checkbox">
            <input type="submit" class="btn btn-primary active" value="Edit Account">
          </div>

        </form>

      <% end %>
    </div>
  </div>
</div>